global
        log /dev/log    local0
        log /dev/log    local1 notice
        chroot /var/lib/haproxy
        stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
        stats timeout 30s
        user haproxy
        group haproxy
        daemon

defaults
        log     global
        mode    http
        option  httplog
        option  dontlognull
        timeout connect 10s
        timeout client  60s
        timeout server  60s
        errorfile 400 /etc/haproxy/errors/400.http
        errorfile 403 /etc/haproxy/errors/403.http
        errorfile 408 /etc/haproxy/errors/408.http
        errorfile 500 /etc/haproxy/errors/500.http
        errorfile 502 /etc/haproxy/errors/502.http
        errorfile 503 /etc/haproxy/errors/503.http
        errorfile 504 /etc/haproxy/errors/504.http

frontend http_in
        mode http
        option httplog
        bind *:80       
        option forwardfor
        acl host_control hdr(host) -i control.bla.com
        acl host_hub     hdr(host) -i hub.bla.com

        use_backend http_aapcontrol if host_control
        use_backend http_hub if host_hub

backend http_aapcontrol
        mode http
        option httplog
        option forwardfor
        server server1 cntrl1:80
        server server2 cntrl2:80

backend http_aaphub
        mode http
        option httplog
        option forwardfor
        server server1 hub1:80
        server server2 hub2:80

frontend https_in
        mode tcp
        option tcplog
        bind *:443
        acl tls req.ssl_hello_type 1
        tcp-request inspect-delay 5s
        tcp-request content accept if tls
        
        acl host_control req.ssl_sni -i control.bla.com
        acl host_hub     req.ssl_sni -i hub.bla.com

        use_backend https_aapcontrol if host_control
        use_backend https_hub if host_hub

backend http_aapcontrol
        mode tcp
        option tcplog
        option ssl-hello-chk
        server server1 cntrl1:443
        server server2 cntrl2:443

backend http_aaphub
        mode tcp
        option tcplog
        option ssl-hello-chk
        server server1 hub1:443
        server server2 hub2:443
        